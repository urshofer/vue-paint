{
  "name": "vue-painter",
  "version": "0.1.0",
  "private": true,
  "main": "dist/vue-painter.umd.js",
  "module": "dist/vue-painter.esm.js",
  "unpkg": "dist/vue-painter.min.js",
  "browser": {
    "./sfc": "src/components/VuePainter.vue"
  },
  "scripts": {
    "build": "npm run build:umd & npm run build:es & npm run build:unpkg",
    "build:umd": "rollup --config build/rollup.config.js --format umd --file dist/vue-painter.umd.js",
    "build:es": "rollup --config build/rollup.config.js --format es --file dist/vue-painter.esm.js",
    "build:unpkg": "rollup --config build/rollup.config.js --format iife --file dist/vue-painter.min.js"
  },
  "dependencies": {
    "js-base64": "^3.6.0",
    "paper": "^0.12.15",
    "uuid": "^8.3.2",
    "wordwrapjs": "5.0.2"
  },
  "devDependencies": {
    "@rollup/plugin-buble": "^0.21.3",
    "@rollup/plugin-commonjs": "^11.1.0",
    "@vue/cli-plugin-babel": "~4.5.0",
    "@vue/cli-plugin-eslint": "~4.5.0",
    "@vue/cli-service": "~4.5.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^6.7.2",
    "eslint-plugin-vue": "^6.2.2",
    "lint-staged": "^9.5.0",
    "node-sass": "^4.12.0",
    "rollup": "^1.17.0",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-vue": "^5.0.1",
    "sass-loader": "^8.0.2",
    "vue": "^2.6.11",
    "vue-template-compiler": "^2.6.11"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {}
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
